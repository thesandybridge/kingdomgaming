{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "title": "Kingdom Gaming",
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "link": true,
            "background": true,
            "gradients": [
                {
                    "name": "Dark Gradient",
                    "slug": "dark-gradient",
                    "gradient": "linear-gradient(0deg,#212121 25%,#000 75%)"
                },
                {
                    "name": "Black Gold Gradient",
                    "slug": "black-gold-gradient",
                    "gradient": "linear-gradient(#bfa25d 0,#bfa25d 50%,#000 50%,#000 100%)"
                }
            ],
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Kingdom Midnight",
                    "slug": "kingdom-midnight",
                    "color": "#050505"
                },
                {
                    "name": "Kingdom Gold",
                    "slug": "kingdom-gold",
                    "color": "#bfa25d"
                },
                {
                    "name": "Kingdom Red",
                    "slug": "kingdom-red",
                    "color": "#ff6b6b"
                },
                {
                    "name": "Kingdom Salmon",
                    "slug": "kingdom-salmon",
                    "color": "#c96480"
                },
                {
                    "name": "Kingdom Indigo",
                    "slug": "kingdom-indigo",
                    "color": "#89aae6"
                },
                {
                    "name": "Kingdom Blue",
                    "slug": "kingdom-blue",
                    "color": "#9ae5e6"
                },
                {
                    "name": "Kingdom Navy",
                    "slug": "kingdom-navy",
                    "color": "#020a1d"
                },
                {
                    "name": "Kingdom Charcoal",
                    "slug": "kingdom-charcoal",
                    "color": "#101010"
                },
                {
                    "name": "Grey 900",
                    "slug": "grey-900",
                    "color": "#303030"
                }
            ]
        },
        "blocks": {
            "core/columns": {
                "spacing": {
                    "margin": true,
                    "padding": true
                }
            },
            "core/group": {
                "spacing": {
                    "blockGap": true
                }
            }
        },
        "layout": {
            "contentSize": "900px",
            "wideSize": "1400px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true,
            "units": [ "px", "em", "rem", "vh", "vw" ]
        },
        "typography": {
            "customFontSize": true,
            "lineHeight": true,
            "dropCap": true,
            "fluid": false,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "textDecoration": true,
            "textTransform": true,
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "0.75rem"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1rem"
                }
            ],
            "fontFamilies": [
                {
                    "name": "Titilium",
                    "slug": "titilium",
                    "fontFamily": "Titlium, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Titilium",
                            "src": ["https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap"]
                        }
                    ]
                },
                {
                    "name": "Industry",
                    "slug": "industry",
                    "fontFamily": "Industry, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Industry",
                            "src": ["https://use.typekit.net/dko6epv.css"]
                        }
                    ]
                }
            ]
        }
    },
    "styles": {
        "elements": {
            "button": {
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "right": "1rem",
                        "bottom": "1rem",
                        "left": "1rem"
                    }
                },
                "typography": {
                    "fontSize": "1rem",
                    "letterSpacing": ".1rem",
                    "textTransform": "uppercase",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--kingdom-gold)",
                    "background": "transparent"
                },
                "border": {
                    "color": "var(--wp--preset--color--kingdom-gold)",
                    "width": "2px",
                    "style": "solid",
                    "radius": {
                        "topLeft": "0",
                        "topRight": "0",
                        "bottomLeft": "0",
                        "bottomRight": "0"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--kingdom-gold)",
                        "text": "var(--wp--preset--color--kingdom-charcoal)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--kingdom-gold)",
                        "text": "var(--wp--preset--color--kingdom-charcoal)"
                    }
                },
                ":active": {
                    "color": {
                        "background": "var(--wp--preset--color--kingdom-gold)",
                        "text": "var(--wp--preset--color--kingdom-charcoal)"
                    }
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--kingdom-gold)"
                }
            },
            "h1": {
				"typography": {
                    "fontSize": "2rem",
                    "lineHeight": "1"
				}
			},
			"h2": {
				"typography": {
                    "fontSize": "1.875rem",
                    "lineHeight": "1"
				}
			},
			"h3": {
				"typography": {
                    "fontSize": "1.5rem",
                    "lineHeight": "1"
				}
			},
			"h4": {
				"typography": {
                    "fontSize": "1.25rem",
                    "lineHeight": "1"
				}
			},
			"h5": {
				"typography": {
                    "fontSize": "1rem",
                    "lineHeight": "1.125"
				}
			},
			"h6": {
				"typography": {
                    "fontSize": "1rem",
                    "lineHeight": "1"
				}
			}
        },
        "typography": {
			"fontFamily": "var(--wp--preset--font-family--industry)",
            "fontSize": "1rem",
            "lineHeight": "2rem"
		},
        "color": {
            "text": "var(--wp--preset--color--white)",
            "background": "var(--wp--preset--color--grey-900)",
            "gradient": "var(--wp--preset--gradient--dark-gradient)"
        }
    }
}
